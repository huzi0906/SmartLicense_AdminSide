@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Feedback</h2>

<table class="feedback-table">
    <thead>
        <tr>
            <th>CNIC</th>
            <th>Name</th>
            <th>Conversations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CNIC</td>
                <td>@item.Name</td>
                <td>
                    <a href="@Url.Action("FeedbackDetail", new { userId = item.UserId })">
                        View Conversation
                    </a>
                    @* <span class="feedback-count">@item.Count</span> *@
                </td>
            </tr>
        }
    </tbody>
</table>
